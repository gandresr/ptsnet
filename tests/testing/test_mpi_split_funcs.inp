import numpy as np

from numba import njit
from time import time

from mpi4py import MPI

comm = MPI.COMM_WORLD
rank = comm.Get_rank()

# @njit
def add(a, b):
    return a[1:] - b[:-1]

N = int(3e6/comm.size)
a = np.random.rand(N)
b = np.random.rand(N)

x = add(a,b)
t = time()
x = add(a,b)
print(time() - t, rank)